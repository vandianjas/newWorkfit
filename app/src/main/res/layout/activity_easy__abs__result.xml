<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E0927"
    tools:context="com.example.workfit.workoutActivities_Abs.Easy_Abs_Result">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        />
    <TextView
        android:id="@+id/finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_below="@+id/congrats"
        android:text="You finished Easy Plan for Abs Workout"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/timespent"
        android:paddingTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finished"
        android:textAlignment="center"
        android:layout_marginLeft="55dp"
        android:text="Time spent:"
        />

    <TextView
        android:id="@+id/minutesSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timespent"
        android:layout_marginTop="4dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:text="24 Minutes"
        />

    <TextView
        android:id="@+id/progress"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minutesSpent"
        android:textAlignment="center"
        android:layout_marginLeft="55dp"
        android:text="Added progress:"
        />

    <TextView
        android:id="@+id/addedprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:text="Crab Kicks +1\nCrunches Chop +1\nDeadbug +1\nDumbell Side +1"
        />

    <Button
        android:id="@+id/backtohome"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FF8C00"
        android:text="BACK TO HOME"
        android:textColor="#2E0927"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

</RelativeLayout>
