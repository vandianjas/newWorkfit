<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E0927"
    tools:context="com.example.workfit.activities.WorkoutDetails_Arm">

    <ImageView
        android:id="@+id/backButtonArm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@mipmap/ic_back_18dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_easy"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="ARM WORKOUT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arm_workout_zoom"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"

        android:layout_height="0dp"
        android:text="@string/Arm_desc"
        android:layout_margin="20dp"
        android:textColor="#ffff"

        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.515" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select your level"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:text="Easy plan"
        android:textAllCaps="false"
        android:textColor="#2E0927"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.502"

        android:clickable="true"
        android:onClick="easyPlan"
        />


    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium plan"
        android:textAllCaps="false"
        android:background="@drawable/gradient"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:textColor="#2E0927"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"

        android:clickable="true"
        android:onClick="mediumPlan"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard plan"
        android:textAllCaps="false"
        android:textColor="#2E0927"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:background="@drawable/gradient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"

        android:clickable="true"
        android:onClick="hardPlan"
        />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_medium"
        app:layout_constraintTop_toTopOf="@+id/button6"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        android:layout_marginRight="24dp"
        app:layout_constraintVertical_bias="0.333" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_hard"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_marginRight="24dp" />

</android.support.constraint.ConstraintLayout>
