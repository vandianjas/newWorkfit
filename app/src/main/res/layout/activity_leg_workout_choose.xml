<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E0927">

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:text="Hard plan"
        android:textAllCaps="false"
        android:textColor="#2E0927"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button10"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="Medium plan"
        android:textAllCaps="false"
        android:textColor="#2E0927"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:text="Easy plan"
        android:textAllCaps="false"
        android:textColor="#2E0927"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="17dp"

        android:text="LEG WORKOUT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_back_18dp"
        app:layout_constraintRight_toLeftOf="@+id/textView12"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.285"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leg_workout_zoom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Leg_desc"
        android:width="300dp"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView18"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView18" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your plam"
        android:textColor="#FFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_easy"
        app:layout_constraintTop_toTopOf="@+id/button8"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button8"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_marginRight="24dp" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_medium"
        app:layout_constraintTop_toTopOf="@+id/button10"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button10"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button10"
        android:layout_marginRight="24dp" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/medal_hard"
        app:layout_constraintTop_toTopOf="@+id/button11"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button11"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button11"
        android:layout_marginRight="24dp" />
</android.support.constraint.ConstraintLayout>
